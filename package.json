{
  "name": "todowidget",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-packager . ToDoWidget --platform=win32 --arch=x64 --out=dist/ --overwrite --icon=resources/icon.ico",
    "build": "electron-builder --win portable",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.5.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.yourname.todowidget",
    "productName": "TodoWidget",
    "asarUnpack": [
      "resources/**"
    ],
    "files": [
      "**/*",
      "!dist/*",
      "resources/**",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/.bin"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "resources/icon.ico"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  }
}
